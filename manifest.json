{
  "manifest_version": 3,
  "name": "Button Click Logger",
  "version": "1.0",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "sidePanel",
    "unlimitedStorage"
  ],
  "commands": {
    "take_screenshot": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Take a screenshot of the current tab"
    },
    "toggle_recording": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Start/Pause Recording"
    }
  },
  "host_permissions": [
       "<all_urls>"
  ],
  "side_panel": {
    "default_path": "sidePanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://iaptus.internal/*",
        "https://demo.iaptus.co.uk/*"
      ],
      "css": [
        "content.css"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "flowDisplay.html",
        "flowDisplay.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}